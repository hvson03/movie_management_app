<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="16dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_khachhang_lichsu_anhphim"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_khachhang_lichsu_tenphim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phim: ten phim 1"
                android:layout_marginStart="12dp"
                android:textColor="#E91E63"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_khachhang_lichsu_theloai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thể loại: thể loại 1"
                android:layout_marginStart="12dp"
                android:textColor="#2196F3"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt_khachhang_lichsu_soluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng: 2"
                android:layout_marginStart="12dp"
                android:textColor="#8BC34A"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt_khachhang_lichsu_thanhtien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thành tiền: 2000VNĐ"
                android:layout_marginStart="12dp"
                android:textColor="#8BC34A"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/txt_khachhang_lichsu_ngaymua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày mua: 1/1/2024"
                android:textStyle="italic"
                android:layout_marginStart="12dp"
                android:textColor="#AD19191B"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>