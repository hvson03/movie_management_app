<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_marginBottom="12dp"
    android:background="#252836">

    <TextView
        android:id="@+id/txt_khachhang_datve_tenphim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Ten phim"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_khachhang_datve_anhphim"
        app:layout_constraintTop_toTopOf="@+id/img_khachhang_datve_anhphim" />

    <ImageView
        android:id="@+id/img_khachhang_datve_anhphim"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_khachhang_datve_giave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá: 1000đ"
        android:textColor="#2196F3"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/txt_khachhang_datve_tenphim"
        app:layout_constraintTop_toBottomOf="@+id/txt_khachhang_datve_tenphim" />

    <EditText
        android:id="@+id/txt_khachhang_datve_soluong"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="1"
        android:textSize="18dp"
        android:textColor="#E91E63"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:text="Số lượng: "
        android:textSize="16dp"
        android:textColor="#8BC34A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_khachhang_datve_soluong" />

    <ImageView
        android:id="@+id/img_khachhang_datve_bochon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_minus_24" />

</androidx.constraintlayout.widget.ConstraintLayout>