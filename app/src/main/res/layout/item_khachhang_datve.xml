<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="#252836"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_khachhang_datve_anhphim"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginStart="12dp" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_khachhang_datve_tenphim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Ten phim"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_khachhang_datve_giave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Giá: 1000đ"
                android:textColor="#2196F3"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Số lượng: "
                    android:textColor="#8BC34A"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_khachhang_datve_minus"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="36dp"
                    android:textColor="@color/pink"
                    android:layout_marginStart="30dp" />

                <EditText
                    android:id="@+id/txt_khachhang_datve_soluong"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="#E91E63"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/txt_khachhang_datve_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:textColor="@color/pink"
                    android:layout_marginEnd="10dp"
                    android:text="+" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_khachhang_datve_bochon"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="#252836"
                android:src="@drawable/baseline_delete_forever_24"
                app:tint="#E91E63"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>