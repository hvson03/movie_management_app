<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color_background"
    tools:context=".khachhang.khachHang_quenmatkhau">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_quaylaidnn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginVertical="50dp"
            android:text="Quên mật khẩu" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên tài khoản"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_tk_quenmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Nhập tên tài khoản"
            android:inputType="text"
            android:padding="10dp"
            android:textColorHint="#C1BFBF" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_email_quenmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Nhập email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColorHint="#C1BFBF" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu mới"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_mk_quenmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Nhập mật khẩu mới"
            android:padding="10dp"
            android:textColorHint="#C1BFBF"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_quenmk"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="30dp"
            android:background="@color/white"
            android:backgroundTint="@null"
            android:text="Lấy lại mật khẩu"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>