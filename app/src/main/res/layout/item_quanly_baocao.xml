<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_quanly_baocao_tenphim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ten phim"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        app:layout_constraintStart_toStartOf="@+id/txt_quanly_baocao_tenkhachhang"
        app:layout_constraintTop_toBottomOf="@+id/txt_quanly_baocao_tenkhachhang" />

    <TextView
        android:id="@+id/txt_quanly_baocao_tenkhachhang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Ten khach hang"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#E91E63"
        app:layout_constraintStart_toEndOf="@+id/img_quanly_baocao_anhphim"
        app:layout_constraintTop_toTopOf="@+id/img_quanly_baocao_anhphim" />

    <TextView
        android:id="@+id/txt_quanly_baocao_thanhtien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 2000đ"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#00BCD4"
        app:layout_constraintStart_toEndOf="@+id/textView30"
        app:layout_constraintTop_toTopOf="@+id/textView30" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textColor="#00BCD4"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/txt_quanly_baocao_giaphim"
        app:layout_constraintTop_toTopOf="@+id/txt_quanly_baocao_giaphim" />

    <TextView
        android:id="@+id/txt_quanly_baocao_soluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 2 "
        android:textSize="22dp"
        android:textColor="#00BCD4"
        app:layout_constraintStart_toEndOf="@+id/textView29"
        app:layout_constraintTop_toTopOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textColor="#00BCD4"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/txt_quanly_baocao_soluong"
        app:layout_constraintTop_toTopOf="@+id/txt_quanly_baocao_soluong" />

    <TextView
        android:id="@+id/txt_quanly_baocao_giaphim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng: 1000đ "
        android:textColor="#00BCD4"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="@+id/txt_quanly_baocao_tenphim"
        app:layout_constraintTop_toBottomOf="@+id/txt_quanly_baocao_tenphim" />

    <ImageView
        android:id="@+id/img_quanly_baocao_anhphim"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.476"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>