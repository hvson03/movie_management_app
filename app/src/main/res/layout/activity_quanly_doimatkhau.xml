<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#423F3F"
    tools:context=".quanly.quanly_doimatkhau">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/img_quaylaitacvu"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView304"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginVertical="50dp"
            android:text="Thay đổi mật khẩu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView214"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:text="Tên tài khoản:" />

            <TextView
                android:id="@+id/tv_dmk_tk_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:text="Tên tài khoản" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:passwordToggleEnabled="true"
            android:textColorHint="#BAB372"
            app:hintTextColor="#BAB372"
            android:layout_marginBottom="40dp"
            app:passwordToggleTint="@color/white"
            android:layout_height="wrap_content" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_dmk_mk_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/white"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"
                android:background="#00FFFFFF"
                android:hint="Nhập mật khẩu cũ"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:textColorHint="#BAB372"
            app:hintTextColor="#BAB372"
            app:passwordToggleTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_dmk_mkmoi_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:ems="1"
                android:hint="Nhập mật khẩu mới"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textColorHint="#BAB372"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/btn_luumk_admin"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Lưu mật khẩu"
            android:textColor="@color/white"
            android:paddingVertical="15dp"
            android:textSize="16sp"
            android:backgroundTint="#009688"
            />

    </LinearLayout>

</RelativeLayout>