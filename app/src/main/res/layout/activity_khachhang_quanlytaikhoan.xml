<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1D2B"
    tools:context=".khachhang.khachhang_quanlytaikhoan">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_suatk_quaylai"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#12CDD9"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginVertical="30dp"
            android:text="Thay đổi thông tin tài khoản" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#FFFFFF"
                app:hintTextColor="@color/white"
                android:hint="Họ và tên"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomEnd="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_suatk_hoten"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="#464B61"
                    android:ems="10"
                    android:hint="................"
                    android:textColorHint="#92929D"
                    android:drawableRight="@drawable/icon_name"
                    android:inputType="text"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Giới tính"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/rb_suatk_gr"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="45dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_suatk_nam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:checked="true"
                    android:text="Nam"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/rb_suatk_nu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    android:textColor="@color/white" />

            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#FFFFFF"
                app:hintTextColor="@color/white"
                android:hint="Ngày sinh"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomEnd="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_suatk_ngaysinh"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="#464B61"
                    android:ems="10"
                    android:hint="................."
                    android:textColorHint="#92929D"
                    android:inputType="date"
                    android:drawableRight="@drawable/icon_date"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#FFFFFF"
                app:hintTextColor="@color/white"
                android:hint="Email"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomEnd="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_suatk_email"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="#464B61"
                    android:ems="10"
                    android:hint=".........."
                    android:textColorHint="#92929D"
                    android:inputType="textEmailAddress"
                    android:drawableRight="@drawable/icon_email"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#FFFFFF"
                app:hintTextColor="@color/white"
                app:boxCornerRadiusTopStart="25dp"
                android:hint="Số điện Thoại"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomEnd="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_suatk_sdt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="#464B61"
                    android:ems="10"
                    android:drawableRight="@drawable/icon_phone"
                    android:hint="......................."
                    android:textColorHint="#92929D"
                    android:inputType="phone"
                    android:textColor="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_suatk_capnhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/button_capnhat" />

    </LinearLayout>
</RelativeLayout>