<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#423F3F"
    tools:context=".khachhang.khachhang_quanlytaikhoan">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_suatk_quaylai"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginVertical="30dp"
            android:text="Thông tin tài khoản" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/name" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Họ và tên"
                android:textColorHint="#FFFFFF"
                app:hintTextColor="@color/white"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusTopStart="15dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_suatk_hoten"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#80E91E63"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="Giới tính"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/rb_suatk_gr"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="45dp"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_suatk_nam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:checked="true"
                    android:text="Nam"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/rb_suatk_nu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Nữ"
                    android:textColor="@color/white" />

            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_suatk_ngaysinh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/date" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Ngày sinh"
                android:textColorHint="#FFFFFF"
                app:hintTextColor="@color/white"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusTopStart="15dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_suatk_ngaysinh"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#80E91E63"
                    android:ems="10"
                    android:inputType="date"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <!--                <EditText-->
        <!--                    android:id="@+id/edit_ngaysinh"-->
        <!--                    android:layout_width="match_parent"-->
        <!--                    android:layout_height="wrap_content"-->
        <!--                    android:layout_marginBottom="20dp"-->
        <!--                    android:ems="10"-->
        <!--                    android:hint="Nhập ngày sinh"-->
        <!--                    android:inputType="date"-->
        <!--                    android:padding="10dp"-->
        <!--                    android:textColorHint="#C1BFBF" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/email" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="#FFFFFF"
                app:hintTextColor="@color/white"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusTopStart="15dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_suatk_email"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#80E91E63"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!--                <EditText-->
        <!--                    android:id="@+id/edit_email"-->
        <!--                    android:layout_width="match_parent"-->
        <!--                    android:layout_height="wrap_content"-->
        <!--                    android:layout_marginBottom="20dp"-->
        <!--                    android:ems="10"-->
        <!--                    android:hint="Nhập email"-->
        <!--                    android:inputType="textEmailAddress"-->
        <!--                    android:padding="10dp"-->
        <!--                    android:textColorHint="#C1BFBF" />-->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/phone" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Số điện Thoại"
                android:textColorHint="#FFFFFF"
                app:hintTextColor="@color/white"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusTopStart="15dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_suatk_sdt"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#80E91E63"
                    android:ems="10"
                    android:inputType="phone"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_suatk_capnhat"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white"
            android:backgroundTint="#009688"
            android:text="Cập nhật" />

    </LinearLayout>
</RelativeLayout>