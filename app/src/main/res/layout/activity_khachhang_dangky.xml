<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color_background"
    android:orientation="vertical"
    tools:context=".khachhang.khachhang_dangky">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17000000"
        android:orientation="vertical"
        android:padding="20dp">


        <ImageView
            android:id="@+id/img_quaylaidn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:gravity="center"
            android:text="Đăng ký tài khoản"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên tài khoản"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_tk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Nhập tên tài khoản"
            android:inputType="text"
            android:padding="10dp"
            android:textColorHint="#C1BFBF" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"

            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_mk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="#C1BFBF" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận mật khẩu"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_xacnhanmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Xác nhận mật khẩu"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="#C1BFBF" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày tạo"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_ngaytao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Ngày tạo"
            android:inputType="text"
            android:focusable="false"
            android:clickable="true"
            android:padding="10dp"
            android:textColorHint="#C1BFBF" />

        <Button
            android:id="@+id/btn_dangky"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#009688"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:text="Đăng ký"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>