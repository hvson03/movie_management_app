        <ImageView
            android:id="@+id/img_quaylaidn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:gravity="center"
            android:text="Đăng ký tài khoản"
            android:textColor="#12CDD9"
            android:textSize="30sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:hintTextColor="@color/white"
                android:textColorHint="#FFFFFF"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomEnd="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_tk"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="#252836"
                    android:ems="10"
                    android:hint="Tên tài khoản"
                    android:drawableRight="@drawable/icon_user"
                    android:inputType="text"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#FFFFFF"
                app:hintTextColor="@color/white"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomEnd="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_email_dk"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="#252836"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:drawableRight="@drawable/icon_email"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Mật khẩu"
                android:textColorHint="#FFFFFF"
                app:hintTextColor="@color/white"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomEnd="25dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_mk"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="#252836"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
