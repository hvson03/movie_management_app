<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="#252836"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_khachhang_yeuthich_anhphim"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="12dp" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_khachhang_yeuthich_tenphim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten phim"
                android:layout_marginStart="12dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_khachhang_yeuthich_theloai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="The loai: the loai 1"
                android:textColor="#9C27B0"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txt_khachhang_yeuthich_thoiluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Thoi gian: 1 gio 1 phut"
                android:textColor="#8BC34A"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_khachhang_yeuthich_bothich"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="#252836"
                android:src="@drawable/baseline_heart_broken_24" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>